@model Front_Tarea3.Models.User

@{
    ViewData["Title"] = "Login";
}

<h1>Bienvenido</h1>

<h4>Ingresa tus credenciales para acceder a la aplicación</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserId" class="control-label">Número de cédula</label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label">Fecha de cumpleaños</label>
                <input type="date" name="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            @if (ViewData["Message"] != null)
            {
                <label class="message_error">@ViewData["Message"]</label>     
            }
            <br />
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
            </div>
            <br />
            <div><a asp-area="" asp-controller="User" asp-action="Create">Registrarse</a></div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
